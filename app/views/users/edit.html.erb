<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      
      <h1>User info</h1>
      
      <% if @user.errors.any? %>
        <div class="error">
          <h3><%= @user.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
    　     　<% end %>
          </ul>
        </div>
      <% end %>
      
      <%= form_with model: @user do |f| %>
        <p><label for="inputName">Name</label></p>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        
        <p><label for="inputImage">Image</label></p>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        
        <p><label for="inputIntroduction">Introduction</label></p>
        <%= f.text_area :introduction, placeholder: "情報" %>
        
        <p><%= f.submit "Update User", class:"btn btn-secondary" %></p>
      <% end %>
      
    </div>
  </div>
</div>
